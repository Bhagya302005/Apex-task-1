            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            padding: 20px;
        }

        .box {
            background: white;
            padding: 20px;
            border-radius: 8px;
        }

        h3 {
            margin-top: 0;
        }

        input, button {
            width: 100%;
            padding: 8px;
            margin-top: 8px;
        }

        button {
            background-color: #006d5b;
            color: white;
            border: none;
            cursor: pointer;
        }

        button:hover {
            background-color: #004c41;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            background: #e0e0e0;
            margin-top: 5px;
            padding: 6px;
            display: flex;
            justify-content: space-between;
        }

        .error {
            color: red;
            font-size: 14px;
