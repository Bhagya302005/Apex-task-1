        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            text-align: center;
        }

        header {
            background-color: #1976d2;
            color: white;
            padding: 15px;
            font-size: 20px;
            font-weight: bold;
        }

        .container {
            background: white;
            max-width: 600px;
            margin: 30px auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        img {
            width: 220px;
            height: auto;
            margin: 15px 0;
        }

        button {
            padding: 8px 16px;
            margin: 5px;
            background-color: green;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        #joke {
            margin: 15px 0;
            font-size: 16px;
        }

        /* Responsive Design */
        @media (max-width: 480px) {
            header {
                font-size: 16px;
